{
  "name": "prompt-hive",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "cross-env DATABASE_URL=file:./prod.db next start -p 3100",
    "lint": "eslint",
    "db:test:push": "dotenv -e .env.test -- npx prisma db push --accept-data-loss",
    "db:reset:test": "dotenv -e .env.test -- npx prisma db push --force-reset",
    "db:push:prod": "cross-env DATABASE_URL=file:./prod.db npx prisma db push --accept-data-loss",
    "db:reset:prod": "cross-env DATABASE_URL=file:./prod.db npx prisma db push --force-reset",
    "e2e:dev": "dotenv -e .env.test -- next dev",
    "test": "vitest run --coverage",
    "test:load": "npx playwright test -c playwright.load.config.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@types/diff": "^7.0.2",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^3.0.3",
    "cheerio": "^1.1.2",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "diff": "^8.0.2",
    "kbar": "^0.1.0-beta.48",
    "lucide-react": "^0.556.0",
    "next": "16.0.7",
    "next-auth": "^4.24.13",
    "next-themes": "^0.4.6",
    "prisma": "^5.22.0",
    "prismjs": "^1.30.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-simple-code-editor": "^0.14.1",
    "sharp": "^0.34.5",
    "uuid": "^13.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/prismjs": "^1.26.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.15",
    "autoprefixer": "^10.4.22",
    "cross-env": "^10.1.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.7",
    "jsdom": "^27.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "vitest": "^4.0.15"
  }
}